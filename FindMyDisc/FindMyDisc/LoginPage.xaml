<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:ViewModels="clr-namespace:FindMyDisc.ViewModels"
             ios:Page.UseSafeArea="True"
             x:DataType="ViewModels:LoginViewModel"
             x:Class="FindMyDisc.MainPage">

    <StackLayout>
        <Label>Email</Label>
        <Entry Keyboard="Email" BindingContext="{Binding Email}"></Entry>
        <Label>Password</Label>
        <Entry IsPassword="True" BindingContext="{Binding Password}"></Entry>
        <Button Text="Login!" Command="{Binding LoginCommand}"></Button>
    </StackLayout>

</ContentPage>

